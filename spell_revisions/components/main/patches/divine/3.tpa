DEFINE_PATCH_FUNCTION storm_shield STR_VAR destination = "*" BEGIN
    LPF get_sectype_id STR_VAR sectype = "insects" RET sectype_id = id END
    PATCH_IF (sectype_id = 0 - 1) BEGIN
        PATCH_FAIL "storm_shield: sectype 'insects' not found."
    END

    LPF ALTER_EFFECT INT_VAR
        verbose = 1
        match_opcode = 205                  //Protection from sectype.
        parameter2 = sectype_id
    END
END

