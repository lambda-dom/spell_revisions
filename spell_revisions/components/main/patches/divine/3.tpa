        resource = "summon_lesser_skeleton"
        ext = "eff"
        match_resource = "lesk#res"
        references = "effects"
    END

    LPF patch_resource_reference INT_VAR
        match_opcode = 177                  //Use Eff.
    STR_VAR
        resource = "summon_greater_skeleton"
        ext = "eff"
        match_resource = "grsk#res"
